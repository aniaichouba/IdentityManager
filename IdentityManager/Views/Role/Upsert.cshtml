@model Microsoft.AspNetCore.Identity.IdentityRole

@{
    var titre = "Create Role";
}
<form asp-action="Upsert">
    @if(Model!=null && !String.IsNullOrEmpty(Model.Id))
    {
        titre = "Edite role";
        <input asp-for="@Model.Id" hidden/>
    }
    <div class="border p-3 bg-white">
        <div class="form-group row">
            <h2 class="text-info pl-3">@titre</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="col-4">
                    <label asp-for="Id"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Id" readonly class="form-control"/>
                </div>
            </div>
            <div class="col-8">
                <div class="col-4">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Name" class="form-control" autocomplete="off"/>
                    <span asp-validation-for="Name" class="form-danger"></span>
                </div>
            </div>
            <div class="form-group row py-2">
                <div class="col-8 offset-4 row">
                    <div class="col">
                        @if(Model!=null && !String.IsNullOrEmpty(Model.Id))
                        {
                          <input type="submit" class="btn btn-info w-100" value="Update"/>  
                        }
                        else
                        {
                            <input type="submit" class="btn btn-info w-100" value="Create" />
                        }
                    </div>
                    <div class="col">
                        <a asp-action="Index" class="btn btn-success w-100">Back</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>